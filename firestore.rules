rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles - only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Matches subcollection - only the user can read/write their own matches
      match /matches/{matchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Shared matches - users can read matches shared with them
    match /sharedMatches/{shareId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.sharedWith;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
